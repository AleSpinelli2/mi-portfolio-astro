<header class="header">
  <nav class="navbar">
    <div class="container">
      <a class="logo" href="#banner">alespi.dev</a>
      <ul class="nav-links">
        <li><a href="#sobreMi">sobre mi</a></li>
        <li><a href="#experiencia">experiencia</a></li>
        <li><a href="#educacion">educación</a></li>
        <li><a href="#habilidades">habilidades</a></li>
        <li><a href="#proyectos">proyectos</a></li>
        <li><a href="#contacto">contacto</a></li>
      </ul>
      <button class="nav-toggle" onclick="toggleNavButton()">
        <span class="nav-toggle-icon"></span>
      </button>
    </div>
  </nav>
</header>
<style>
  .header {
    width: 100%;
  }

  .navbar {
    background: linear-gradient(180deg, #1a1a1a 10%, rgba(0, 0, 0, 0.5) 90.15%);
    position: fixed;
    top: 0;
    width: 100%;
    height: 90px;
    z-index: 1000;
    backdrop-filter: blur(10px);
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .logo {
    color: #b8ec4c;
    font-family: "Poppins", sans-serif;
    font-weight: 800;
    font-size: 42px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  .nav-links {
    list-style: none;
    display: flex;
    color: #b8ec4c;
    gap: 30px;
    margin: 0;
    padding: 0;
  }

  .nav-links li {
    margin: 0;
  }

  .nav-links li a {
    text-decoration: none;
    color: #b8ec4c;
    font-family: "Poppins", sans-serif;
    font-weight: 500;
    font-size: 16px;
    position: relative;
    transition: all 0.3s ease;
    padding: 8px 0;
  }

  .nav-links li a::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: #6f7465;
    bottom: -3px;
    left: 0;
    transition: all 0.3s ease;
  }

  .nav-links li a:hover::after {
    width: 0;
  }

  .nav-links li a:hover {
    color: #6f7465;
    font-size: 16px;
  }

  .nav-toggle {
    background: none;
    border: none;
    cursor: pointer;
    display: none;
    padding: 10px;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  .nav-toggle:hover {
    background-color: rgba(184, 236, 76, 0.1);
  }

  .nav-toggle-icon {
    display: block;
    width: 30px;
    height: 4px;
    background-color: #b8ec4c;
    transition: transform 0.3s ease;
    border-radius: 2px;
  }

  .nav-toggle-icon::before,
  .nav-toggle-icon::after {
    content: "";
    display: block;
    width: 30px;
    height: 4px;
    background-color: #b8ec4c;
    transition: transform 0.3s ease;
    border-radius: 2px;
  }

  .nav-toggle-icon::before {
    transform: translateY(-10px);
  }

  .nav-toggle-icon::after {
    transform: translateY(10px);
  }

  .nav-toggle.open .nav-toggle-icon {
    transform: rotate(45deg);
  }

  .nav-toggle.open .nav-toggle-icon::before {
    transform: translateY(0) rotate(0deg);
  }

  .nav-toggle.open .nav-toggle-icon::after {
    transform: translateY(0) rotate(-180deg);
  }

  /* Responsive para tablets */
  @media screen and (max-width: 1024px) {
    .container {
      padding: 0 15px;
    }

    .logo {
      font-size: 36px;
    }

    .nav-links {
      gap: 20px;
    }

    .nav-links li a {
      font-size: 15px;
    }
  }

  /* Responsive para móviles grandes */
  @media screen and (max-width: 768px) {
    .navbar {
      height: 70px;
    }

    .container {
      padding: 0 15px;
    }

    .logo {
      font-size: 28px;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 70px;
      left: 0;
      width: 100%;
      background-color: rgba(26, 26, 26, 0.95);
      backdrop-filter: blur(10px);
      padding: 20px 0;
      gap: 0;
      border-top: 1px solid #272829;
    }

    .nav-links.active {
      display: flex;
    }

    .nav-links li {
      margin: 0;
      width: 100%;
    }

    .nav-links li a {
      display: block;
      padding: 15px 30px;
      font-size: 16px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      transition: all 0.3s ease;
    }

    .nav-links li a:hover {
      background-color: rgba(184, 236, 76, 0.1);
      color: #b8ec4c;
    }

    .nav-links li:last-child a {
      border-bottom: none;
    }

    .nav-toggle {
      display: block;
    }
  }

  /* Responsive para móviles medianos */
  @media screen and (max-width: 480px) {
    .navbar {
      height: 60px;
    }

    .container {
      padding: 0 10px;
    }

    .logo {
      font-size: 24px;
    }

    .nav-links {
      top: 60px;
      padding: 15px 0;
    }

    .nav-links li a {
      padding: 12px 20px;
      font-size: 15px;
    }

    .nav-toggle-icon,
    .nav-toggle-icon::before,
    .nav-toggle-icon::after {
      width: 25px;
      height: 3px;
    }

    .nav-toggle-icon::before {
      transform: translateY(-8px);
    }

    .nav-toggle-icon::after {
      transform: translateY(8px);
    }
  }

  /* Responsive para móviles pequeños */
  @media screen and (max-width: 360px) {
    .navbar {
      height: 55px;
    }

    .logo {
      font-size: 20px;
    }

    .nav-links {
      top: 55px;
      padding: 10px 0;
    }

    .nav-links li a {
      padding: 10px 15px;
      font-size: 14px;
    }

    .nav-toggle-icon,
    .nav-toggle-icon::before,
    .nav-toggle-icon::after {
      width: 22px;
      height: 2px;
    }

    .nav-toggle-icon::before {
      transform: translateY(-6px);
    }

    .nav-toggle-icon::after {
      transform: translateY(6px);
    }
  }
</style>
<script>
  const navToggle = document.querySelector(".nav-toggle");
  const navLinks = document.querySelector(".nav-links");

  navToggle?.addEventListener("click", () => {
    navToggle.classList.toggle("open");
    navLinks?.classList.toggle("active");
  });

  // Cerrar menú al hacer clic en un enlace
  navLinks?.addEventListener("click", (e) => {
    if (e.target instanceof HTMLAnchorElement) {
      navToggle?.classList.remove("open");
      navLinks?.classList.remove("active");
    }
  });

  // Cerrar menú al redimensionar la ventana
  window.addEventListener("resize", () => {
    if (window.innerWidth > 768) {
      navToggle?.classList.remove("open");
      navLinks?.classList.remove("active");
    }
  });

  function toggleNavButton() {
    const screenWidth = window.innerWidth;
    
    if (navToggle instanceof HTMLElement) {
      if (screenWidth <= 768) {
        navToggle.style.display = "block";
      } else {
        navToggle.style.display = "none";
      }
    }
  }

  toggleNavButton();
  window.addEventListener("resize", toggleNavButton);
</script>
