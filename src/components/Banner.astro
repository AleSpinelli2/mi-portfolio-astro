<style>
  .container {
    background-image: linear-gradient(to bottom, #000 35%, #1a1a1a);
    display: flex;
    align-items: center;
    justify-content: space-around;
    min-height: 100vh;
    padding: 120px 20px 60px 20px;
    box-sizing: border-box;
    width: 100%;
  }

  .perfil {
    position: relative; 
    margin-left: 20px;
    flex-shrink: 0;
  }

  .foto-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .img-perfil {
    width: 100%;
    max-width: 500px;
    height: auto;
    object-fit: cover;
    border-radius: 50%;
    z-index: 3;
    position: relative;
    border: 4px solid #b8ec4c;
    box-shadow: 
      0 0 30px rgba(184, 236, 76, 0.3),
      0 20px 40px rgba(0, 0, 0, 0.4);
    transition: all 0.3s ease;
  }

  .img-perfil:hover {
    transform: scale(1.05);
    box-shadow: 
      0 0 50px rgba(184, 236, 76, 0.5),
      0 25px 50px rgba(0, 0, 0, 0.5);
  }

  .foto-border {
    position: absolute;
    top: -8px;
    left: -8px;
    right: -8px;
    bottom: -8px;
    border: 2px solid rgba(184, 236, 76, 0.3);
    border-radius: 50%;
    z-index: 2;
    animation: rotate 10s linear infinite;
  }

  .foto-glow {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(circle, rgba(184, 236, 76, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    z-index: 1;
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.1);
    }
  }

  .seccion-titulo {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    flex: 1;
    max-width: 600px;
  }

  a {
