<nav class="navbar">
  <div class="container">
    <a class="logo">alespi.dev</a>
    <input type="checkbox" id="nav-toggle" class="nav-toggle" />
    <ul class="nav-links">
      <li><a href="#">sobre mi</a></li>
      <li><a href="#">experiencia</a></li>
      <li><a href="#">educación</a></li>
      <li><a href="#">habilidades</a></li>
      <li><a href="#">proyectos</a></li>
      <li><a href="#">contacto</a></li>
    </ul>
    <button onclick="navToggle" class="nav-toggle-label">
      <span></span>
    </button>
  </div>
</nav>

<style>
  .navbar {
    background-color: rgba(0, 0, 0, 0.5);
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    color: #b8ec4c;
    font-family: "Poppins", sans-serif;
    font-weight: 800;
    font-size: 24px;
    text-decoration: none;
    margin-left: 20px;
  }

  .nav-links {
    list-style: none;
    display: flex;
    color: #b8ec4c;
    margin-right: 20px;
  }

  .nav-links li {
    margin-right: 20px;
  }

  .nav-links li a {
    text-decoration: none;
    color: #b8ec4c;
    font-family: "Poppins", sans-serif;
    font-weight: 500;
    font-size: 16px;
    position: relative;
  }

  .nav-links li a::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: #6f7465;
    bottom: -3px;
    left: 0;
    transition: all 0.3s ease;
  }

  .nav-links li a:hover::after {
    width: 0;
  }

  .nav-links li a:hover {
    color: #6f7465;
    font-size: 16px;
  }

  .nav-toggle {
    display: none;
  }

  .nav-toggle-label {
    cursor: pointer;
    padding: 10px 20px;
    background-color: transparent;
  }

  .nav-toggle-label span {
    display: block;
    width: 20px;
    height: 3px;
    background-color: #b8ec4c;
    transition: all 0.3s ease;
  }

  .nav-toggle:checked + .nav-links {
    display: block;
    position: absolute;
    left: 0;
    width: 100%;
    background-color: rgba(106, 108, 109, 0.5);
    z-index: 999;
    margin-bottom: 50px;
  }

  @media screen and (max-width: 768px) {
    .container {
      padding: 0 20px;
    }

    .logo {
      margin-left: 20px;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 50px;
      left: 0;
      width: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }

    .nav-links li {
      margin-right: 0;
      margin-bottom: 10px;
    }

    .nav-toggle {
      display: block;
    }

    .nav-toggle-label {
      display: block;
    }
  }
  .nav-links.active {
    display: block;
  }

  @media screen and (max-width: 768px) {
    .nav-links {
      display: none;
    }
  }
</style>
<script>
  // Seleccionar el botón de alternancia y el menú de navegación
  const navToggle = document.querySelector(".nav-toggle-label");
  const navLinks = document.querySelector(".nav-links");

  // Agregar un evento de clic al botón de alternancia
  navToggle.addEventListener("click", () => {
    // Alternar la clase 'active' en el menú de navegación
    navLinks.classList.toggle("active");
  });
</script>
