---
import CarerExperience from "./CarerExperience.astro";
import ExperienciaCarrera from "./CarerExperience.astro";
import PersonalExperience from "./PersonalExperience.astro";
import ExperienciaPersonal from "./PersonalExperience.astro";
---

<div class="contenido">
  <div class="seccion-izquierda">
    <div class="seccion-titulo">
      <h2 class="titulo">Experiencia</h2>
      <h1 class="subtitulo">PROYECTOS/LABORAL</h1>
    </div>
    <div class="seccion-filtros">
      <a class="filtros-texto" id="carrera-link">Proyectos</a>
      <a class="filtros-texto" id="personales-link">Laboral</a>
    </div>
  </div>
  <div class="seccion-derecha" id="contenido-derecha">
    <div id="experiencia-carrera" style="display: none;">
      <CarerExperience />
    </div>
    <div id="experiencia-personal" style="display: none;">
      <PersonalExperience />
    </div>
  </div>
</div>

<style>
  .contenido {
    display: flex;
    width: 100%;
    min-height: auto;
    background-color: #1a1a1a;
    padding: 80px 20px 50px 20px;
    box-sizing: border-box;
    gap: 40px;
    border-bottom: 1px solid #272829;
  }

  .seccion-izquierda {
    flex: 0 0 auto;
    width: 300px;
    background-color: #1a1a1a;
    box-sizing: border-box;
  }

  .seccion-derecha {
    flex: 1;
    min-width: 0;
  }

  .seccion-filtros {
    display: flex;
    flex-direction: column;
    width: max-content;
    justify-items: start;
    margin-top: 50px;
    gap: 15px;
  }

  .seccion-titulo {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: max-content;
    gap: 10px;
  }

  .subtitulo {
    width: max-content;
    height: max-content;
    margin: 0;
  }

  .titulo {
    width: max-content;
    height: max-content;
    margin: 0;
  }

  h1 {
    font-family: "Inter", serif;
    font-weight: 500;
    font-size: 1.5rem;
    letter-spacing: 2px;
    color: #ffffff;
    margin: 0;
  }

  h2 {
    font-family: "PlusJakartaSans", serif;
    font-weight: 700;
    font-size: 3rem;
    color: #b8ec4c;
    margin: 0;
  }

  a.filtros-texto {
    font-family: "Inter", serif;
    font-weight: 500;
    font-size: 1.5rem;
    color: #b8ec4c;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    padding: 8px 16px;
    border-radius: 1rem;
    border: 1.5px solid transparent;
  }

  .seccion-filtros a.filtros-texto.selected {
    color: #b8ec4c;
    background-color: #353535;
    border: 1.5px solid #5f6061;
  }

  a.filtros-texto:hover {
    color: #4f514e;
    background-color: rgba(184, 236, 76, 0.1);
  }

  .mostrar {
    display: block;
  }

  /* Responsive para tablets grandes */
  @media screen and (max-width: 1024px) {
    .contenido {
      padding: 60px 15px 40px 15px;
      gap: 30px;
    }

    .seccion-izquierda {
      width: 250px;
    }

    h1 {
      font-size: 1.3rem;
      letter-spacing: 2px;
    }

    h2 {
      font-size: 2.5rem;
    }

    a.filtros-texto {
      font-size: 1.3rem;
      padding: 6px 12px;
    }
  }

  /* Responsive para tablets */
  @media screen and (max-width: 768px) {
    .contenido {
      flex-direction: column;
      padding: 50px 15px 30px 15px;
      gap: 30px;
    }

    .seccion-izquierda {
      width: 100%;
      text-align: center;
    }

    .seccion-titulo {
      align-items: center;
      margin-bottom: 20px;
    }

    .seccion-filtros {
      flex-direction: row;
      justify-content: center;
      margin-top: 20px;
      gap: 10px;
    }

    h1 {
      font-size: 1.1rem;
      letter-spacing: 1.5px;
    }

    h2 {
      font-size: 2rem;
    }

    a.filtros-texto {
      font-size: 1.1rem;
      padding: 5px 10px;
    }
  }

  /* Responsive para móviles grandes */
  @media screen and (max-width: 480px) {
    .contenido {
      padding: 40px 10px 25px 10px;
      gap: 25px;
    }

    .seccion-filtros {
      gap: 8px;
    }

    h1 {
      font-size: 1rem;
      letter-spacing: 1px;
    }

    h2 {
      font-size: 1.8rem;
    }

    a.filtros-texto {
      font-size: 1rem;
      padding: 4px 8px;
    }
  }

  /* Responsive para móviles medianos */
  @media screen and (max-width: 360px) {
    .contenido {
      padding: 30px 8px 20px 8px;
      gap: 20px;
    }

    .seccion-filtros {
      flex-direction: column;
      gap: 6px;
    }

    h1 {
      font-size: 0.9rem;
      letter-spacing: 0.5px;
    }

    h2 {
      font-size: 1.6rem;
    }

    a.filtros-texto {
      font-size: 0.9rem;
      padding: 3px 6px;
    }
  }

  /* Responsive para móviles pequeños */
  @media screen and (max-width: 280px) {
    .contenido {
      padding: 25px 5px 15px 5px;
      gap: 15px;
    }

    h1 {
      font-size: 0.8rem;
      letter-spacing: 0.3px;
    }

    h2 {
      font-size: 1.4rem;
    }

    a.filtros-texto {
      font-size: 0.8rem;
      padding: 2px 4px;
    }
  }
</style>
<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
  const carreraLink = document.getElementById("carrera-link");
  const personalesLink = document.getElementById("personales-link");
  const experienciaCarrera = document.getElementById("experiencia-carrera");
  const experienciaPersonal = document.getElementById("experiencia-personal");

  if (
    carreraLink &&
    personalesLink &&
    experienciaCarrera &&
    experienciaPersonal
  ) {
    function mostrarCarrera() {
      experienciaCarrera.style.display = "block";
      experienciaPersonal.style.display = "none";
      carreraLink.classList.add("selected");
      personalesLink.classList.remove("selected");
    }

    function mostrarPersonales() {
      experienciaCarrera.style.display = "none";
      experienciaPersonal.style.display = "block";
      carreraLink.classList.remove("selected");
      personalesLink.classList.add("selected");
    }

    carreraLink.addEventListener("click", mostrarCarrera);
    personalesLink.addEventListener("click", mostrarPersonales);

    mostrarCarrera();
  } else {
    console.error("Alguno de los elementos no se encontró.");
  }
});
</script>
