---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Banner from "../components/Banner.astro";
import SobreMi from "../components/SobreMi.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experiencia from "../components/Experiencia.astro";
import Educacion from "../components/Educacion.astro";
import Footer from "../components/Footer.astro";
import Habilidades from "../components/Habilidades.astro";
---

<Layout title="ALESPI.DEV">
  <SectionContainer class="mi-clase" id="/#banner">
    <Banner />
  </SectionContainer>
  <SectionContainer class="mi-clase" id="/#sobreMi">
    <SobreMi />
  </SectionContainer>
  <SectionContainer>
    <Experiencia/>
  </SectionContainer>
  <SectionContainer>
    <Educacion/>
  </SectionContainer>
  <SectionContainer>
    <Habilidades/>
  </SectionContainer>
  <SectionContainer>
    <Footer/>
  </SectionContainer>
</Layout>

