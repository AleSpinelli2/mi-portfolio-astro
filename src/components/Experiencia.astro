---
import ExperienciaCarrera from "./ExperienciaCarrera.astro";
import ExperienciaPersonal from "./ExperienciaPersonal.astro";
---

<div class="container">
  <div class="contenido">
    <div class="seccion-izquierda">
      <div class="seccion-titulo">
        <h1 class="subtitulo">PERSONALES/CARRERA</h1>
        <h2 class="titulo">Experiencia</h2>
      </div>
      <div class="seccion-filtros">
        <a class="filtros-texto" id="carrera-link">Carrera</a>
        <a class="filtros-texto" id="personales-link">Personales</a>
      </div>
    </div>
    <div class="seccion-derecha" id="contenido-derecha">
      <div id="experiencia-carrera" style="display: none;">
        <ExperienciaCarrera />
      </div>
      <div id="experiencia-personal" style="display: none;">
        <ExperienciaPersonal />
      </div>
    </div>
  </div>
</div>

<style>
  .container {
    display: block;
    width: 100%;
    min-height: auto;
    background-color: #1a1a1a;
    padding-top: 150px;
    box-sizing: border-box;
  }
  .contenido {

    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    border-bottom: 1px solid #272829;
  }
  .seccion-izquierda {
    display: grid;
    align-items: start;
    margin-left: 150px;
    width: max-content;
    min-width: 300px;
    justify-items: start;
  }
  .seccion-titulo {
    display: grid;
    align-items: start;
    margin-left: 20px;
    width: max-content;
    justify-items: center;
  }
  .seccion-filtros {
    display: grid;
    width: max-content;
    justify-items: start;
    margin-top: 50px;
    margin-left: 25px;
  }
  .subtitulo {
    width: max-content;
    height: max-content;
    margin: 0;
  }
  .titulo {
    width: max-content;
    height: max-content;
    margin: 0;
  }
  h1 {
    font-family: "Inter", serif;
    font-weight: 500;
    font-size: 1rem;
    letter-spacing: 5.5px;
    color: #ffffff;
  }
  h2 {
    font-family: "PlusJakartaSans", serif;
    font-weight: 700;
    font-size: 5rem;
    color: #b8ec4c;
  }

  a.filtros-texto {
    font-family: "Inter", serif;
    font-weight: 500;
    font-size: 2.5rem;
    color: #b8ec4c;
    transition: color 0.3s ease;
    cursor: pointer;
  }
  a.filtros-texto:hover {
    color: #4f514e;
  }
  h1.filtros-texto.selected {
    color: #4f514e;
  }

  .mostrar {
    display: block;
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const carreraLink = document.getElementById("carrera-link");
    const personalesLink = document.getElementById("personales-link");
    const experienciaCarrera = document.getElementById("experiencia-carrera");
    const experienciaPersonal = document.getElementById("experiencia-personal");

    if (
      carreraLink &&
      personalesLink &&
      experienciaCarrera &&
      experienciaPersonal
    ) {
      function mostrarCarrera() {
        experienciaCarrera!.style.display = "block";
        experienciaPersonal!.style.display = "none";
      }

      function mostrarPersonales() {
        experienciaCarrera!.style.display = "none";
        experienciaPersonal!.style.display = "block";
      }

      carreraLink.addEventListener("click", mostrarCarrera);
      personalesLink.addEventListener("click", mostrarPersonales);

      mostrarCarrera();
    } else {
      console.error("Alguno de los elementos no se encontr√≥.");
    }
  });
</script>
