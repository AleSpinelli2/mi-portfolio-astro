    </div>
  </div>
  <div class="seccion-derecha">
    <div class="seccion-filtros">
      <div _ngcontent-ng-c1445413196="" class="filters">
        <p _ngcontent-ng-c1445413196="" class="">Todos</p>
        <p _ngcontent-ng-c1445413196="" class="">Full Stack</p>
        <p _ngcontent-ng-c1445413196="" class="">Frontend</p>
        <p _ngcontent-ng-c1445413196="" class="">Backend</p>
      </div>
    </div>
    {
      proyectosJson.proyectosJson.map((proyecto, proyectoIndex) => (
        <div _ngcontent-ng-c1445413196="" class="project">
          <div _ngcontent-ng-c1445413196="" class="info">
            <>
              <header _ngcontent-ng-c1445413196="">
                <h3 _ngcontent-ng-c1445413196="">{proyecto.tipo}</h3>
              </header>
              <div _ngcontent-ng-c1445413196="" class="text">
                <>
                  <h2 _ngcontent-ng-c1445413196="">{proyecto.titulo}</h2>
                  <p _ngcontent-ng-c1445413196="">
                    {proyecto.descripcion}
                  </p>
