<style>
  .header {
  }

  .navbar {
    /* background-color: rgba(0, 0, 0, 0.5); */
    background: linear-gradient(
      180deg,
      #1a1a1a 10%,
      rgba(0, 0, 0, 0.5) 90.15%
    );
    position: fixed;
    top: 0;
    width: 100%;
    height: 90px;
    z-index: 1000;
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  .logo {
    color: #b8ec4c;
    font-family: "Poppins", sans-serif;
    font-weight: 800;
    font-size: 42px;
    text-decoration: none;
    margin-left: 50px;
  }

  .nav-links {
    list-style: none;
    display: flex;
    color: #b8ec4c;
    margin-right: 150px;
  }

  .nav-links li {
    margin-right: 20px;
  }

  .nav-links li a {
    text-decoration: none;
    color: #b8ec4c;
    font-family: "Poppins", sans-serif;
    font-weight: 500;
    font-size: 16px;
    position: relative;
  }

  .nav-links li a::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: #6f7465;
    bottom: -3px;
    left: 0;
    transition: all 0.3s ease;
  }

  .nav-links li a:hover::after {
    width: 0;
  }

  .nav-links li a:hover {
    color: #6f7465;
    font-size: 16px;
  }

  .nav-toggle {
    background: none;
    border: none;
    cursor: pointer;
    display: none; 
  }

  .nav-toggle-icon {
    display: block;
    width: 30px;
    height: 4px;
    background-color: #b8ec4c;
    transition: transform 0.3s ease;
  }

  .nav-toggle-icon::before,
  .nav-toggle-icon::after {
    content: "";
    display: block;
    width: 30px;
    height: 4px;
    background-color: #b8ec4c;
    transition: transform 0.3s ease;
  }

  .nav-toggle-icon::before {
    transform: translateY(-10px);
  }

  .nav-toggle-icon::after {
    transform: translateY(10px);
  }

  .nav-toggle.open .nav-toggle-icon {
    transform: rotate(45deg);
  }

  .nav-toggle.open .nav-toggle-icon::before {
    transform: translateY(0) rotate(90deg);
  }

  .nav-toggle.open .nav-toggle-icon::after {
    transform: translateY(0) rotate(-90deg);
  }

  @media screen and (max-width: 768px) {
    .container {
      padding: 0 20px;
    }

    .logo {
      margin-left: 20px;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 50px;
      left: 0;
      width: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }

    .nav-links li {
      margin-right: 0;
      margin-bottom: 10px;
    }
    .nav-toggle {
      display: block;
      position: absolute;
      top: 20px;
      right: 20px;
    }

    .nav-toggle-label {
      display: block;
    }
  }
  .nav-links.active {
    display: block;
  }
</style>
<script>
  const navToggle = document.querySelector(".nav-toggle");
const navLinks = document.querySelector(".nav-links");

navToggle?.addEventListener("click", () => {
  navToggle.classList.toggle("open");
  navLinks?.classList.toggle("active");
});

function toggleNavButton() {
  const screenWidth = window.innerWidth;
  const halfScreenWidth = screenWidth / 2;

  function toggleNavButton() {
  const screenWidth = window.innerWidth;
  const halfScreenWidth = screenWidth / 2;

  if (navToggle instanceof HTMLElement) {
    if (screenWidth <= halfScreenWidth) {
      navToggle.style.display = "block";
    } else {
      navToggle.style.display = "none";
    }
  }
}
}

toggleNavButton(); 
window.addEventListener("resize", toggleNavButton);
</script>
