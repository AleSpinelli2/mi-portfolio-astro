---
import Slider from "./Slider.astro";
---

<div class="container">
  <div class="seccion-izquierda">
    <div class="seccion-titulo">
      <h2 class="titulo">Habilidades</h2>
      <h1 class="subtitulo">LENGUAJES/APTITUDES</h1>
    </div>
  </div>
  
  <div class="slider">
    <Slider />
  </div>
  
</div>
<style>
  .container {
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: #1a1a1a;
    border-bottom: 2px solid #272829;
    padding: 80px 20px 50px 20px;
    box-sizing: border-box;
  }

  .seccion-izquierda {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 60px;
  }

  .seccion-titulo {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 10px;
  }

  .subtitulo, .titulo {
    width: 100%; 
    max-width: 100%;
    height: auto; 
    margin: 0;
    text-align: center;
  }

  h1 {
    font-family: "Inter", serif;
    font-weight: 500;
    font-size: 1.5rem;
    letter-spacing: 2px;
    color: #ffffff;
    margin: 0;
  }

  h2 {
    font-family: "PlusJakartaSans", serif;
    font-weight: 700;
    font-size: 3rem;
    color: #b8ec4c;
    margin: 0;
  }

  .slider {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    width: 100%;
  }

  /* Responsive para tablets grandes */
  @media screen and (max-width: 1024px) {
    .container {
      padding: 60px 15px 40px 15px;
    }

    .seccion-izquierda {
      margin-bottom: 50px;
    }

    h1 {
      font-size: 1.3rem;
      letter-spacing: 1.5px;
    }

    h2 {
      font-size: 2.5rem;
    }
  }

  /* Responsive para tablets */
  @media screen and (max-width: 768px) {
    .container {
      padding: 50px 15px 30px 15px;
    }

    .seccion-izquierda {
      margin-bottom: 40px;
    }

    h1 {
      font-size: 1.1rem;
      letter-spacing: 1px;
    }

    h2 {
      font-size: 2rem;
    }

    .slider {
      gap: 10px;
    }
  }

  /* Responsive para m칩viles grandes */
  @media screen and (max-width: 480px) {
    .container {
      padding: 40px 10px 25px 10px;
    }

    .seccion-izquierda {
      margin-bottom: 30px;
    }

    h1 {
      font-size: 1rem;
      letter-spacing: 0.5px;
    }

    h2 {
      font-size: 1.8rem;
    }

    .slider {
      gap: 8px;
    }
  }

  /* Responsive para m칩viles medianos */
  @media screen and (max-width: 360px) {
    .container {
      padding: 30px 8px 20px 8px;
    }

    .seccion-izquierda {
      margin-bottom: 25px;
    }

    h1 {
      font-size: 0.9rem;
      letter-spacing: 0.3px;
    }

    h2 {
      font-size: 1.6rem;
    }

    .slider {
      gap: 6px;
    }
  }

  /* Responsive para m칩viles peque침os */
  @media screen and (max-width: 280px) {
    .container {
      padding: 25px 5px 15px 5px;
    }

    .seccion-izquierda {
      margin-bottom: 20px;
    }

    h1 {
      font-size: 0.8rem;
      letter-spacing: 0.2px;
    }

    h2 {
      font-size: 1.4rem;
    }

    .slider {
      gap: 5px;
    }
  }
</style>
