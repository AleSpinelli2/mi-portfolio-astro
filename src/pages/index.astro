---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Banner from "../components/Banner.astro";
import AboutMe from "../components/AboutMe.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experiencia from "../components/Experience.astro";
import Educacion from "../components/Education.astro";
import Footer from "../components/Footer.astro";
import Habilidades from "../components/Skills.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="ALESPI.DEV">
  <SectionContainer class="mi-clase" id="banner">
    <Banner />
  </SectionContainer>
  <SectionContainer class="mi-clase" id="sobreMi">
    <AboutMe />
  </SectionContainer>
  <SectionContainer class="mi-clase" id="experiencia">
    <Experiencia/>
  </SectionContainer>
  <SectionContainer class="mi-clase" id="educacion">
    <Educacion/>
  </SectionContainer>
  <SectionContainer class="mi-clase" id="habilidades">
    <Habilidades/>
  </SectionContainer>
  <SectionContainer class="mi-clase" id="proyectos">
    <Projects/>
  </SectionContainer>
  <SectionContainer class="mi-clase" id="contacto">
    <Footer/>
  </SectionContainer>
</Layout>

