                    {proyecto.descripcion1}
                  </p>
                </>
              </div>
              <div _ngcontent-ng-c1445413196="" class="ancors">
                {proyecto.links.map((link, linkIndex) => (
                  <a
                    _ngcontent-ng-c1445413196=""
                    href={link.url}
                    target="_blank"
                  >
                    <img
                      _ngcontent-ng-c1445413196=""
                      src="/iconos footer/github.svg"
